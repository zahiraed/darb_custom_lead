<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lead_next_action_form_wizard" model="ir.ui.view">
        <field name="name">next.action.wizard.form</field>
        <field name="model">next.action.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="activity_type_id"/>
                    </group>
                    <group>
                        <field name="date_deadline"/>
                    </group>
                </group>
                <footer>
                    <button string="Schedule action" name="schedule_action" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>